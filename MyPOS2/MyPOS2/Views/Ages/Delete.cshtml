@model MyPOS2.Data.Entity.AGE

@{
    ViewBag.Title = "Delete";
}

<h2>Supprimer</h2>

<h3>Etes-vous sur de vouloir le supprimer?</h3>
<div>
    <h4>AGE</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.imageAge)*@
            Image
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.imageAge)*@
            <img src="@Url.Content(Model.imageAge)" alt="Image représentant la tranche d'age" class="imgIndex" />
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.rangeAges)*@
            Tranche d'age
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rangeAges)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("Retour à la Liste", "Index")
        </div>
    }
</div>
