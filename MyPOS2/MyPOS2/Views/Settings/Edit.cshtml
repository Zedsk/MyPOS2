@model MyPOS2.Data.Entity.SETTING

@{
    ViewBag.Title = "Edit";
}

@section Scripts{
    <script src="@Url.Content("~/Scripts/pos2.js")" type="text/javascript"></script>
}

<h2>Editer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Paramètres</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idSetting)
    @Html.HiddenFor(model => model.nameSetting)
    <h2 style="color: red; font-weight: bold">@ViewBag.Error</h2>
    <div class="form-group">
        @*@Html.LabelFor(model => model.nameSetting, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <label class="control-label col-md-2">Nom</label>
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.nameSetting, new { htmlAttributes = new { @class = "form-control", @disabled = "disbaled" } })*@
            @Html.DisplayFor(model => model.nameSetting, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nameSetting, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @*@Html.LabelFor(model => model.valueSetting, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <label class="control-label col-md-2">Valeur</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.valueSetting, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.valueSetting, "", new { @class = "text-danger" })
            <span id="errorAddProduct" class="text-danger" style=" visibility:hidden"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sauver" class="btn btn-default" />
        </div>
    </div>
</div>
}


<div>
    @Html.ActionLink("Retour à la Liste", "Index")
</div>
