@model IEnumerable<MyPOS2.Data.Entity.PRODUCT>

@{
    ViewBag.Title = "Index";
}

@section Styles {
    <link href="@Url.Content("~/Content/pos2.css")" rel="stylesheet" type="text/css" />
}

<h2>Articles</h2>

<p>
    @Html.ActionLink("Créer nouveau", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.imageProduct)*@
            Image Article
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.barcode)*@
            N° Article
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.salesPrice)*@
            Prix
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.discountRate)*@
            Remise
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.AGE.imageAge)*@
            Age
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.BRAND.nameBrand)*@
            Marque
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.CATEGORY.imageCat)*@
            Catégorie
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.HERO.imageHero)*@
            Héro
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.VAT.idVat)*@
            TVA
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.imageProduct)*@
                @if (item.imageProduct != null)
                {
                    <img src="@Url.Content(item.imageProduct)" alt="Image du produit" class="imgIndex" />
                }
                else
                {
                    <img src="~/Content/image/logo_noImage.png" alt="Pas d'image" class="imgIndex" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.barcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salesPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.discountRate)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.AGE.imageAge)*@
                @if (item.AGE.imageAge != null)
                {
                    <img src="@Url.Content(item.AGE.imageAge)" alt="Image de la tranche d'age" class="imgIndex" />
                }
                else
                {
                    <img src="~/Content/image/logo_noImage.png" alt="Pas d'image" class="imgIndex" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BRAND.nameBrand)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.CATEGORY.imageCat)*@
                @if (item.CATEGORY.imageCat != null)
                {
                    <img src="@Url.Content(item.CATEGORY.imageCat)" alt="Image de la catégorie" class="imgIndex" />
                }
                else
                {
                    <img src="~/Content/image/logo_noImage.png" alt="Pas d'image" class="imgIndex" />
                }
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.HERO.imageHero)*@
                @if (item.HERO != null)
                {
                    <img src="@Url.Content(item.HERO.imageHero)" alt="Logo Héro" class="imgIndex" />
                }
                else
                {
                    <img src="~/Content/image/logo_noImage.png" alt="Pas d'image" class="imgIndex" />
                }
            </td>
            <td>
                @{
                    var temp = ((item.VAT.appliedVat) * 100).ToString();
                    var tempsplit = temp.Split(',');
                    var tva = tempsplit[0] + "%";
                    <span>@tva</span>
                }
                @*@Html.DisplayFor(modelItem => item.VAT.appliedVat)*@
            </td>
            <td>
                @Html.ActionLink("Editer", "Edit", new { id = item.idProduct }) |
                @Html.ActionLink("Détails", "Details", new { id = item.idProduct }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.idProduct })
            </td>
        </tr>
    }

</table>
