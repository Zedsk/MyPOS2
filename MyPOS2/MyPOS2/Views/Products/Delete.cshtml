@model MyPOS2.Data.Entity.PRODUCT

@{
    ViewBag.Title = "Delete";
}

@section Styles {
    <link href="@Url.Content("~/Content/pos2.css")" rel="stylesheet" type="text/css" />
}

<h2>Supprimer</h2>

<h3>Etes-vous sur de vouloir le supprimer?</h3>
<div>
    <h4>Article</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.imageProduct)*@
            Image
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.imageProduct)*@
            @if (Model.imageProduct != null)
            {
                <img src="@Url.Content(Model.imageProduct)" alt="Image du produit" class="imgIndex" />
            }
            else
            {
                <img src="~/Content/image/logo_noImage.png" alt="Pas d'image" class="imgIndex" />
            }
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.barcode)*@
            Code barre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.barcode)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.salesPrice)*@
            Prix
        </dt>

        <dd>
            @Html.DisplayFor(model => model.salesPrice)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.discountRate)*@
            Remise
        </dt>

        <dd>
            @Html.DisplayFor(model => model.discountRate)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.AGE.imageAge)*@
            Age
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.AGE.imageAge)*@
            <img src="@Url.Content(Model.AGE.imageAge)" alt="Image de la tranche d'age" class="imgIndex" />
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.BRAND.nameBrand)*@
            Marque
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BRAND.nameBrand)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.CATEGORY.imageCat)*@
            Catégorie
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.CATEGORY.imageCat)*@
            <img src="@Url.Content(Model.CATEGORY.imageCat)" alt="Image de la catégorie" class="imgIndex" />
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.HERO.imageHero)*@
            Héro
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.HERO.imageHero)*@
            @if (Model.HERO != null)
            {
                <img src="@Url.Content(Model.HERO.imageHero)" alt="Image du héro" class="imgIndex" />
            }
            else
            {
                <img src="~/Content/image/logo_noImage.png" alt="Pas d'image" class="imgIndex" />
            }
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.VAT.idVat)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VAT.idVat)
        </dd>*@

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" onclick="return confirm('Etes-vous sur de vouloir supprimer?');"/> |
            @Html.ActionLink("Retour à la liste", "Index")
        </div>
    }
</div>
