@model MyPOS2.Data.Entity.LANGUAGES

@{
    ViewBag.Title = "Details";
}

@section Styles {
    <link href="@Url.Content("~/Content/pos2.css")" rel="stylesheet" type="text/css" />
}

<h2>Détails</h2>

<div>
    <h4>LANGAGES</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nameLanguage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nameLanguage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.shortForm)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.shortForm)
        </dd>
    </dl>
</div>
@if (Model.shortForm == "all")
{
    <p>
        @Html.ActionLink("Retour à la Liste", "Index")
    </p>
}
else
{
    <p>
        @Html.ActionLink("Editer", "Edit", new { id = Model.idLanguage }) |
        @Html.ActionLink("Retour à la Liste", "Index")
    </p>
}
