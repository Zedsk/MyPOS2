@model MyPOS2.Models.report.RTotalSalesByProductViewModel



<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">
                @Html.LabelFor(m => m.Report.nameProduct)

            </th>
            <th scope="col">
                @Html.LabelFor(m => m.Report.qtyItem)

            </th>
            <th scope="col">
                @Html.LabelFor(m => m.Report.totItem)

            </th>
            <th scope="col">
                @Html.LabelFor(m => m.Report.productId)

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Reports)
        {
            <tr>
                <th scope="row">1</th>
                <td>@item.nameProduct</td>
                <td>@item.qtyItem</td>
                <td>@item.totItem</td>
                <td>@item.productId</td>
            </tr>
        }
    </tbody>
</table>