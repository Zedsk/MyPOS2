@model MyPOS2.Models.report.RTotalSalesViewModel


<h3 id="reportTitle" class="delimiterTopBotBold"></h3>
<h4></h4>

<div id="totReport">
    <span class="col-md-2" style="font-size: 16px">
        @Html.LabelFor(m => m.TotReport) :
    </span>
    <span class="col-md-3" style="font-size: 16px">
        @Html.DisplayFor(m => m.TotReport) € 
    </span>
</div>
<table class="table delimiterTopBot">
    <thead class="thead-dark">
        <tr >
            <th scope="col">#</th>
            <th scope="col">
                N° Transaction
            </th>
            <th scope="col">
                Début
            </th>
            <th scope="col">
                Fin
            </th>
            <th scope="col">
                Total
            </th>
            <th scope="col">
                Remise 
            </th>
            <th scope="col">
                Terminal
            </th>
            <th scope="col">
                Client
            </th>
            <th scope="col">
                Vendeur
            </th>
            <th scope="col">
                Magasin
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
            foreach (var item in Model.Reports){
        <tr>
            <th scope="row">@i</th>
            <td>@item.idTransaction</td>
            <td>@item.transactionDateBegin</td>
            <td>@item.transactionDateEnd</td>
            <td>@item.total €</td>
            @if (@item.discountGlobal != null)
            {
                <td>@item.discountGlobal %</td>
            }else
            {
                <td> - </td>
            }
            <td>@item.nameTerminal</td>
            <td>@item.namePerson</td>
            <td>@item.nameUser</td>
            <td>@item.nameShop</td>
        </tr>
                i++;
            }
        }
    </tbody>
</table>
<p style="font-size: 11px">Rapport généré le : @DateTime.Now.ToShortDateString()  à @DateTime.Now.ToLongTimeString()</p>