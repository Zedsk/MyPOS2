    ViewBag.Title = "Delete";
}

<h2>Supprimer</h2>

<h3>Etes-vous sur de vouloir supprimer cette marque?</h3>
<div>
    <h4>MARQUE</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.nameBrand)*@
            Nom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nameBrand)
