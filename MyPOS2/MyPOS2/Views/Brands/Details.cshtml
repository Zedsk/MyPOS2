@model MyPOS2.Data.Entity.BRAND

@{
    ViewBag.Title = "Details";
}

@section Styles {
    <link href="@Url.Content("~/Content/pos2.css")" rel="stylesheet" type="text/css" />
}

<h2>Détails</h2>

<div>
    <h4>MARQUE</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nameBrand)
        </dd>

        <dt>
            Logo
        </dt>

        <dd>
            <img src="@Url.Content(Model.imageBrand)" alt="Logo de la marque" class="imgIndex" />
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Editer", "Edit", new { id = Model.idBrand }) |
    @Html.ActionLink("Retour à la Liste", "Index")
</p>
