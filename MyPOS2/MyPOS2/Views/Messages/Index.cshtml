
@model IEnumerable<MyPOS2.Data.Entity.SPP_MessageTransDistinct_Result>

@{
    ViewBag.Title = "Index";
}

@section Styles {
    <link href="@Url.Content("~/Content/pos2.css")" rel="stylesheet" type="text/css" />
}

<h2>Messages</h2>

<p>
    @Html.ActionLink("Créer nouveau", "Create") | @Html.ActionLink("Retour au Menu", "Management", "Home")
</p>
@using (Html.BeginForm())
{

    <label for="SearchString"><strong>Recherche par titre: </strong></label>
    <div style="display:flex;">
        @Html.TextBox("SearchString", "", new { @class = "form-control" })
        <input type="submit" value="Recherche" />
        @Html.ActionLink("Tous", "Index", "Messages", new { type = "button", @class = "btn btn-primary" })
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Titre", "Index", new { sortOrder = ViewBag.NameSortParam })
        </th>
        <th>
            Message
        </th>
        <th>
            Langage
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (ViewBag.messageG == item.idMessage)
        {
            <tr>
                <td>
                    <span class="defSetting">@Html.DisplayFor(modelItem => item.title)</span>
                </td>
                <td>
                    <span class="defSetting"> @Html.DisplayFor(modelItem => item.message)</span>
                </td>
                <td>
                    <span class="defSetting">@Html.DisplayFor(modelItem => item.nameLanguage)</span>
                </td>
                <td>
                    @Html.ActionLink("Editer", "Edit", new { id = item.idMessage }) |
                    @Html.ActionLink("Détails", "Details", new { id = item.idMessage }) |
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.idMessage }) |
                    @Html.ActionLink("Par défaut", "Default", new { id = item.idMessage })
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nameLanguage)
                </td>
                <td>
                    @Html.ActionLink("Editer", "Edit", new { id = item.idMessage }) |
                    @Html.ActionLink("Détails", "Details", new { id = item.idMessage }) |
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.idMessage }) |
                    @Html.ActionLink("Par défaut", "Default", new { id = item.idMessage })
                </td>
            </tr>
        }
    }

</table>
