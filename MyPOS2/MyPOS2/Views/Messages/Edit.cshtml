
@model MyPOS2.Models.management.MessageViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Editer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MESSAGE</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdMessage)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            @if (!ViewBag.isUniversal)
            {
                for (int i = 0; i < Model.ListLang.Count(); i++)
                {
                    <div class="col-md-2">
                        @Html.HiddenFor(model => model.MessagesTrans[i].messageId, new { @Value = Model.IdMessage })
                        @Html.EditorFor(model => model.MessagesTrans[i].title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MessagesTrans, "", new { @class = "text-danger" })

                        @Html.DisplayFor(m => m.ListLang[i].nameLanguage)

                        @Html.HiddenFor(m => m.MessagesTrans[i].languageId, new { @Value = Model.ListLang[i].idLanguage })

                    </div>
                    <br />
                }
            }
            else
            {
                <div class="col-md-2">
                    @Html.HiddenFor(model => model.MessagesTrans[0].messageId)
                    @Html.EditorFor(model => model.MessagesTrans[0].title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MessagesTrans, "", new { @class = "text-danger" })

                    <label>Universel ou @Html.DisplayFor(m => m.ListLang[0].nameLanguage)</label>

                    @Html.HiddenFor(m => m.MessagesTrans[0].languageId, new { @Value = Model.ListLang[0].idLanguage })

                </div>
            }
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
            @if (!ViewBag.isUniversal)
            {
                for (int i = 0; i < Model.ListLang.Count(); i++)
                {
                    <div class="col-md-2">
                        @Html.HiddenFor(model => model.MessagesTrans[i].messageId, new { @Value = Model.IdMessage })
                        @Html.EditorFor(model => model.MessagesTrans[i].message, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MessagesTrans, "", new { @class = "text-danger" })

                        @Html.DisplayFor(m => m.ListLang[i].nameLanguage)

                        @Html.HiddenFor(m => m.MessagesTrans[i].languageId, new { @Value = Model.ListLang[i].idLanguage })

                    </div>
                    <br />
                }
            }
            else
            {
                <div class="col-md-2">
                    @Html.HiddenFor(model => model.MessagesTrans[0].messageId)
                    @Html.EditorFor(model => model.MessagesTrans[0].message, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MessagesTrans, "", new { @class = "text-danger" })

                    <label>Universel ou @Html.DisplayFor(m => m.ListLang[0].nameLanguage)</label>

                    @Html.HiddenFor(m => m.MessagesTrans[0].languageId, new { @Value = Model.ListLang[0].idLanguage })

                </div>
            }
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sauver" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la Liste", "Index")
</div>
