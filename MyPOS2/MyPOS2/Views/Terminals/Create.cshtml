@model MyPOS2.Data.Entity.TERMINAL

@{
                /**/

                ViewBag.Title = "Create";
}


@section Styles {
    <link href="@Url.Content("~/Content/pos2.css")" rel="stylesheet" type="text/css" />
}

@section Scripts{
    <script src="@Url.Content("~/Scripts/pos2.js")" type="text/javascript"></script>
}


<h2>Créer un nouveau Terminal</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>TERMINAL</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @*@Html.LabelFor(model => model.nameTerminal, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <label class="control-label col-md-2">Nom du Terminal</label>
        <div class="col-md-10">

            @Html.EditorFor(model => model.nameTerminal, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.nameT } })
            @Html.ValidationMessageFor(model => model.nameTerminal, "", new { @class = "text-danger" })
            <button type="button" class="btn btn-default" value="" onclick="SearchHostName()">
                <span class="glyphicon glyphicon-search"></span> Nom de l'appareil
            </button>
        </div>
    </div>
    <div class="form-group">
        @*@Html.LabelFor(model => model.shopId, "shopId", htmlAttributes: new { @class = "control-label col-md-2" })*@
        <label class="control-label col-md-2">Nom du Magasin</label>
        <div class="col-md-10">
            @Html.DropDownList("shopId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.shopId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Créer" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div id="detail">
    @Html.Partial("_PartialTerminalName")
</div>

<div>
    @Html.ActionLink("Retour à la Liste", "Index")
</div>
